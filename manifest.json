{
    "name": "Spotify Playlist Tool",
    "version": "1.5",
    "description": "Add songs to playlists with a single click!",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "identity",
        "*://*.google.com/*",
        "storage",
        "*://*.spotify.com/*",
        "alarms",
        "idle",
        "notifications",
        "https://i.scdn.co/*",
        "https://us-central1-spotify-playlist-extension.cloudfunctions.net/*",
        "http://localhost:8888/*"
    ],
    "icons": {
        "16": "images/spotify16.png",
        "48": "images/spotify64.png",
        "128": "images/spotify128.png"
    },
    "browser_action": {
        "default_popup": "popup_login.html",
        "default_icon": {
            "16": "images/spotify16.png",
            "24":"images/spotify24.png",
            "32": "images/spotify32.png",
            "64": "images/spotify64.png",
            "128": "images/spotify128.png"
        }
    },
    "web_accessible_resources": [
        "/oauth2/*"
    ],
    "commands": {
        "add_current_song": {
            "suggested_key": {
                "windows": "Alt+Shift+X",
                "mac": "Alt+Shift+X",
                "chromeos": "Alt+Shift+X",
                "linux": "Alt+Shift+X"
            },
            "description": "Add current song to targeted playlist."
        },
        "skip_song": {
            "suggested_key": {
                "windows": "Alt+Shift+S",
                "mac": "Alt+Shift+S",
                "chromeos": "Alt+Shift+S",
                "linux": "Alt+Shift+S"
            },
            "description": "Skip song."
        },
        "restart": {
            "suggested_key": {
                "windows": "Alt+Shift+D",
                "mac": "Alt+Shift+D",
                "chromeos": "Alt+Shift+D",
                "linux": "Alt+Shift+D"
            },
            "description": "Restart the current song"
        },
        "play_pause": {
            "suggested_key": {
                "windows": "Alt+Shift+P",
                "mac": "Alt+Shift+P",
                "chromeos": "Alt+Shift+P",
                "linux": "Alt+Shift+P"
            },
            "description": "Play or pause a song."
        }
    },
    "key": "REDACTED"
  }